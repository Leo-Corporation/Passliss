<Page x:Class="Passliss.Pages.SettingsPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Passliss.Pages" xmlns:lang="clr-namespace:Passliss.Properties" mc:Ignorable="d" FontFamily="../Fonts/#Hauora" Foreground="{Binding Source={StaticResource Foreground1}}" d:DesignHeight="450" d:DesignWidth="700" Title="SettingsPage">

	<ScrollViewer HorizontalScrollBarVisibility="Hidden" Template="{DynamicResource ScrollViewerControlTemplate}" CanContentScroll="True" Height="344">
		<Grid Margin="0,0,0,40">
			<StackPanel Margin="10,40,10,10" Grid.Row="0">
				<TextBlock Text="{x:Static lang:Resources.Settings}" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="16" />

				<Border Background="{Binding Source={StaticResource Background3}}" CornerRadius="10" Margin="10" Padding="10" HorizontalAlignment="Stretch">
					<Border.Effect>
						<DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="10" Opacity="0.4" RenderingBias="Quality" />
					</Border.Effect>
					<StackPanel>
						<TextBlock Text="{x:Static lang:Resources.Passliss}" Foreground="{Binding Source={StaticResource Foreground1}}" FontWeight="ExtraBold" FontSize="28" Margin="0,0,0,0" />
						<TextBlock x:Name="VersionTxt" Text="{x:Static lang:Resources.Passliss}" Foreground="{Binding Source={StaticResource Foreground1}}" FontWeight="Normal" Margin="0,0,0,5" FontSize="14" />
						<StackPanel x:Name="UpdateStatusPanel" Orientation="Horizontal">
							<TextBlock x:Name="UpdateStatusTxt" Text="{x:Static lang:Resources.Updates}" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalAlignment="Center" Margin="0,0,15,0" />
							<Button x:Name="RefreshInstallBtn" Click="RefreshInstallBtn_Click" Background="{Binding Source={StaticResource AccentColor}}" Foreground="{Binding Source={StaticResource WindowButtonsHoverForeground1}}" Padding="10,5,10,5" Style="{StaticResource TabButtonStyle}" FontWeight="ExtraBold" Cursor="Hand" VerticalAlignment="Center" HorizontalAlignment="Left">
								<StackPanel Orientation="Horizontal">
									<TextBlock x:Name="InstallIconTxt" Text="&#xE9EA;" FontWeight="Regular" FontFamily="..\Fonts\#FluentlyIcons" Margin="0,0,5,0" VerticalAlignment="Center" />
									<TextBlock x:Name="InstallMsgTxt" Text="{x:Static lang:Resources.Install}" VerticalAlignment="Center" />
								</StackPanel>
							</Button>
						</StackPanel>
						<CheckBox Margin="0 10 0 2" x:Name="CheckUpdatesOnStartChk" Style="{DynamicResource CheckBoxStyle1}" Content="{x:Static lang:Resources.CheckUpdatesOnStart}" BorderThickness="3" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalContentAlignment="Center" Unchecked="CheckUpdatesOnStartChk_Checked" Checked="CheckUpdatesOnStartChk_Checked" />
						<CheckBox Margin="0 2 0 2" x:Name="NotifyUpdatesChk" Style="{DynamicResource CheckBoxStyle1}" Content="{x:Static lang:Resources.NotifyUpdates}" BorderThickness="3" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalContentAlignment="Center" Unchecked="NotifyUpdatesChk_Checked" Checked="NotifyUpdatesChk_Checked" />
					</StackPanel>
				</Border>

				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xF33C;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.Theme}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.ChangeTheme}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<StackPanel Orientation="Horizontal">
						<Border x:Name="LightBorder" CornerRadius="10" Margin="5" Background="{Binding Source={StaticResource Background1}}" BorderThickness="3" BorderBrush="{x:Null}" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" Cursor="Hand" MouseLeftButtonUp="LightBorder_MouseLeftButtonUp">
							<StackPanel Orientation="Vertical">
								<Rectangle RadiusX="10" RadiusY="10" Width="100" Height="100" HorizontalAlignment="Center">
									<Rectangle.Fill>
										<ImageBrush ImageSource="..\Images\LightTheme.png" />
									</Rectangle.Fill>
								</Rectangle>
								<RadioButton Style="{DynamicResource RadioButtonStyle1}" x:Name="LightRadioBtn" Checked="LightRadioBtn_Checked" GroupName="ThemeRadioGroup" Content="{x:Static lang:Resources.Light}" Foreground="{Binding Source={StaticResource Foreground1}}" Background="{Binding Source={StaticResource Background1}}" BorderBrush="{Binding Source={StaticResource AccentColor}}" FontWeight="ExtraBold" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,2,0,2" />
							</StackPanel>
						</Border>
						<Border x:Name="DarkBorder" CornerRadius="10" Margin="5" Background="{Binding Source={StaticResource Background1}}" BorderThickness="3" BorderBrush="{x:Null}" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" Cursor="Hand" MouseLeftButtonUp="DarkBorder_MouseLeftButtonUp">
							<StackPanel Orientation="Vertical">
								<Rectangle RadiusX="10" RadiusY="10" Width="100" Height="100" HorizontalAlignment="Center">
									<Rectangle.Fill>
										<ImageBrush ImageSource="..\Images\DarkTheme.png" />
									</Rectangle.Fill>
								</Rectangle>
								<RadioButton Style="{DynamicResource RadioButtonStyle1}" x:Name="DarkRadioBtn" Checked="DarkRadioBtn_Checked" GroupName="ThemeRadioGroup" Content="{x:Static lang:Resources.Dark}" Foreground="{Binding Source={StaticResource Foreground1}}" Background="{Binding Source={StaticResource Background1}}" BorderBrush="{Binding Source={StaticResource AccentColor}}" FontWeight="ExtraBold" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,2,0,2" />
							</StackPanel>
						</Border>
						<Border x:Name="SystemBorder" CornerRadius="10" Margin="5" Background="{Binding Source={StaticResource Background1}}" BorderThickness="3" BorderBrush="{x:Null}" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" Cursor="Hand" MouseLeftButtonUp="SystemBorder_MouseLeftButtonUp">
							<StackPanel Orientation="Vertical">
								<Rectangle RadiusX="10" RadiusY="10" Width="100" Height="100" HorizontalAlignment="Center">
									<Rectangle.Fill>
										<ImageBrush ImageSource="..\Images\SystemTheme.png" />
									</Rectangle.Fill>
								</Rectangle>
								<RadioButton Style="{DynamicResource RadioButtonStyle1}" x:Name="SystemRadioBtn" Checked="SystemRadioBtn_Checked" GroupName="ThemeRadioGroup" Content="{x:Static lang:Resources.System}" Foreground="{Binding Source={StaticResource Foreground1}}" Background="{Binding Source={StaticResource Background1}}" BorderBrush="{Binding Source={StaticResource AccentColor}}" FontWeight="ExtraBold" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,2,0,2" />
							</StackPanel>
						</Border>
						<Button x:Name="ThemeApplyBtn" Background="{Binding Source={StaticResource AccentColor}}" Foreground="{Binding Source={StaticResource WindowButtonsHoverForeground1}}" Padding="10,5,10,5" Style="{StaticResource TabButtonStyle}" FontWeight="ExtraBold" Cursor="Hand" VerticalAlignment="Center" Click="ThemeApplyBtn_Click" Visibility="Hidden">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="&#xE98E;" FontWeight="Regular" FontFamily="..\Fonts\#FluentlyIcons" Margin="0,0,5,0" VerticalAlignment="Center" />
								<TextBlock Text="{x:Static lang:Resources.Apply}" VerticalAlignment="Center" />
							</StackPanel>
						</Button>
					</StackPanel>
				</Expander>

				<Border CornerRadius="5" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>

						<StackPanel Margin="15,15,10,15" Orientation="Horizontal">
							<TextBlock Text="&#xF4F4;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.Language}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.ChangeLanguage}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>

						<StackPanel Orientation="Horizontal" Grid.Column="1">
							<ComboBox SelectionChanged="LangComboBox_SelectionChanged" BorderThickness="2" Padding="5" Style="{DynamicResource ComboBoxStyle1}" x:Name="LangComboBox" Background="Transparent" BorderBrush="{Binding Source={StaticResource AccentColor}}" Foreground="{Binding Source={StaticResource Foreground1}}" HorizontalAlignment="Left" Margin="0,0,10,0" VerticalAlignment="Center" />
							<Button x:Name="LangApplyBtn" Background="{Binding Source={StaticResource AccentColor}}" Foreground="{Binding Source={StaticResource WindowButtonsHoverForeground1}}" Padding="10,5,10,5" Style="{StaticResource TabButtonStyle}" FontWeight="ExtraBold" Cursor="Hand" VerticalAlignment="Center" Click="LangApplyBtn_Click" Visibility="Hidden">
								<TextBlock Text="&#xF680;" FontWeight="Regular" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Margin="0,0,0,0" VerticalAlignment="Center" />

								<Button.ToolTip>
									<ToolTip Content="{x:Static lang:Resources.Apply}" Foreground="{Binding Source={StaticResource Foreground1}}" Background="{Binding Source={StaticResource Background1}}" />
								</Button.ToolTip>
							</Button>
						</StackPanel>
					</Grid>
				</Border>

				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xFC97;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.RandomPasswordLength}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.RandomPasswordLengthDesc}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<StackPanel Margin="10 0 10 10">
						<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
							<TextBlock Text="{x:Static lang:Resources.Between}" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalAlignment="Center" />
							<TextBox x:Name="MinLengthTxt" MinWidth="40" Style="{DynamicResource TextBoxStyle1}" FontSize="14" Background="{Binding Source={StaticResource Background4}}" BorderBrush="#FF007FFF" Foreground="{Binding Source={StaticResource Foreground1}}" CaretBrush="{Binding Source={StaticResource Foreground1}}" SelectionBrush="#FF007AF5" Margin="10,0,10,0" VerticalAlignment="Center" TextChanged="MinLengthTxt_TextChanged" MaxLength="3" TextAlignment="Center" >
								<TextBox.Effect>
									<DropShadowEffect BlurRadius="15" Color="#000" Direction="135" Opacity="0.2" ShadowDepth="0" />
								</TextBox.Effect>
							</TextBox>
							<TextBlock Text="{x:Static lang:Resources.And}" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalAlignment="Center" />
							<TextBox x:Name="MaxLengthTxt" MinWidth="40" Style="{DynamicResource TextBoxStyle1}" FontSize="14" Background="{Binding Source={StaticResource Background4}}" BorderBrush="#FF007FFF" Foreground="{Binding Source={StaticResource Foreground1}}" CaretBrush="{Binding Source={StaticResource Foreground1}}" SelectionBrush="#FF007AF5" Margin="10,0,10,0" VerticalAlignment="Center" TextChanged="MaxLengthTxt_TextChanged" MaxLength="3" TextAlignment="Center" >
								<TextBox.Effect>
									<DropShadowEffect BlurRadius="15" Color="#000" Direction="135" Opacity="0.2" ShadowDepth="0" />
								</TextBox.Effect>
							</TextBox>
							<Button x:Name="RandomLengthApplyBtn" Background="{Binding Source={StaticResource AccentColor}}" Foreground="{Binding Source={StaticResource WindowButtonsHoverForeground1}}" Padding="10,5,10,5" Style="{StaticResource TabButtonStyle}" FontWeight="ExtraBold" Cursor="Hand" VerticalAlignment="Center" Click="RandomLengthApplyBtn_Click" Visibility="Hidden">
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="&#xE98E;" FontWeight="Regular" FontFamily="..\Fonts\#FluentlyIcons" Margin="0,0,5,0" VerticalAlignment="Center" />
									<TextBlock Text="{x:Static lang:Resources.Apply}" VerticalAlignment="Center" />
								</StackPanel>
							</Button>
						</StackPanel>

						<CheckBox Margin="0 2 0 2" x:Name="RandomLengthOnStartChk" Style="{DynamicResource CheckBoxStyle1}" Content="{x:Static lang:Resources.RandomPasswordLengthOnStart}" BorderThickness="3" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalContentAlignment="Center" Unchecked="RandomLengthOnStartChk_Checked" Checked="RandomLengthOnStartChk_Checked" />
					</StackPanel>
				</Expander>


				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xF60F;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.Startup}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.StartupPage}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<StackPanel Margin="10 0 10 10">
						<StackPanel Orientation="Horizontal">
							<Border x:Name="GeneratePageBorder" CornerRadius="10" Margin="5" Background="{Binding Source={StaticResource Background1}}" BorderThickness="3" BorderBrush="{x:Null}" MouseEnter="Border_MouseEnter_1" MouseLeave="Border_MouseLeave_1" Cursor="Hand" MouseLeftButtonUp="GeneratePageBorder_MouseLeftButtonUp">
								<StackPanel Orientation="Vertical">
									<TextBlock Text="&#xFC23;" Margin="20" FontSize="64" FontFamily="..\Fonts\#FluentSystemIcons-Regular" HorizontalAlignment="Center" />
									<RadioButton Style="{DynamicResource RadioButtonStyle1}" x:Name="GeneratePageRadioBtn" Checked="GeneratePageRadioBtn_Checked" GroupName="StartupPageRadioGroup" Content="{x:Static lang:Resources.Generate}" Foreground="{Binding Source={StaticResource Foreground1}}" Background="{Binding Source={StaticResource Background1}}" BorderBrush="#2153E0" FontWeight="ExtraBold" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2" />
								</StackPanel>
							</Border>
							<Border x:Name="StrengthPageBorder" CornerRadius="10" Margin="5" Background="{Binding Source={StaticResource Background1}}" BorderThickness="3" BorderBrush="{x:Null}" MouseEnter="Border_MouseEnter_1" MouseLeave="Border_MouseLeave_1" Cursor="Hand" MouseLeftButtonUp="StrengthPageBorder_MouseLeftButtonUp">
								<StackPanel Orientation="Vertical">
									<TextBlock Text="&#xF6BF;" Margin="20" FontSize="64" FontFamily="..\Fonts\#FluentSystemIcons-Regular" HorizontalAlignment="Center" />
									<RadioButton Style="{DynamicResource RadioButtonStyle1}" x:Name="StrengthPageRadioBtn" Checked="StrengthPageRadioBtn_Checked" GroupName="StartupPageRadioGroup" Content="{x:Static lang:Resources.Strenght}" Foreground="{Binding Source={StaticResource Foreground1}}" Background="{Binding Source={StaticResource Background1}}" BorderBrush="#2153E0" FontWeight="ExtraBold" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2" />
								</StackPanel>
							</Border>
							<Border x:Name="EncryptionPageBorder" CornerRadius="10" Margin="5" Background="{Binding Source={StaticResource Background1}}" BorderThickness="3" BorderBrush="{x:Null}" MouseEnter="Border_MouseEnter_1" MouseLeave="Border_MouseLeave_1" Cursor="Hand" MouseLeftButtonUp="EncryptionPageBorder_MouseLeftButtonUp">
								<StackPanel Orientation="Vertical">
									<TextBlock Text="&#xF834;" Margin="20" FontSize="64" FontFamily="..\Fonts\#FluentSystemIcons-Regular" HorizontalAlignment="Center" />
									<RadioButton Style="{DynamicResource RadioButtonStyle1}" x:Name="EncryptionPageRadioBtn" Checked="EncryptionPageRadioBtn_Checked" GroupName="StartupPageRadioGroup" Content="{x:Static lang:Resources.Encryption}" Foreground="{Binding Source={StaticResource Foreground1}}" Background="{Binding Source={StaticResource Background1}}" BorderBrush="#2153E0" FontWeight="ExtraBold" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2" />
								</StackPanel>
							</Border>
						</StackPanel>

						<CheckBox Margin="0 2 0 2" x:Name="ToggleConfidentialChk" Style="{DynamicResource CheckBoxStyle1}" Content="{x:Static lang:Resources.ToggleConfidentialMode}" BorderThickness="3" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalContentAlignment="Center" Unchecked="ToggleConfidentialChk_Unchecked" Checked="ToggleConfidentialChk_Unchecked" />

						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>
							<TextBlock x:Name="SelectedStrengthTxt" FontSize="13" VerticalAlignment="Center" TextWrapping="Wrap"/>
							<Slider x:Name="StrengthSlider" Value="2" Maximum="3" Minimum="0" SmallChange="1" IsSnapToTickEnabled="True" TickFrequency="1" Style="{DynamicResource SliderStyle1}" VerticalAlignment="Center" Grid.Column="1" Width="200"/>
						</Grid>
					</StackPanel>
				</Expander>


				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xF6AA;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.PasswordConfigurations}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.ResetDefaultPwrConfig}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<StackPanel>
						<Button x:Name="ResetPwrConfigBtn" Padding="5" Margin="10,0,10,10" Background="{x:Null}" Style="{DynamicResource LinkButtonStyle}" Foreground="{Binding Source={StaticResource AccentColor}}" FontSize="14" FontWeight="ExtraBold" Cursor="Hand" Click="ResetPwrConfigBtn_Click" HorizontalAlignment="Left">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="&#xF583;" FontFamily="..\Fonts\#FluentSystemIcons-Regular" FontWeight="Regular" Margin="0,0,10,0" VerticalAlignment="Center" />
								<TextBlock Text="{x:Static lang:Resources.ResetDefaultPwrConfig}" VerticalAlignment="Center" />
							</StackPanel>
						</Button>

						<StackPanel Orientation="Horizontal" Margin="10,0,0,5">
							<Button x:Name="ImportPwrConfig" Click="ImportPwrConfig_Click" Background="{Binding Source={StaticResource AccentColor}}" Foreground="{Binding Source={StaticResource WindowButtonsHoverForeground1}}" Padding="10,5,10,5" Style="{StaticResource TabButtonStyle}" FontWeight="ExtraBold" Cursor="Hand" VerticalAlignment="Center" Margin="0,0,10,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="&#xF151;" FontWeight="Regular" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="16" />
									<TextBlock Text="{x:Static lang:Resources.Import}" VerticalAlignment="Center" />
								</StackPanel>
							</Button>
							<Button x:Name="ExportPwrConfig" Click="ExportPwrConfig_Click" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}" Padding="10,5,10,5" Style="{StaticResource TabButtonStyle}" FontWeight="ExtraBold" Cursor="Hand" VerticalAlignment="Center" MouseEnter="BtnEnter" MouseLeave="BtnLeave">
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="&#xF1A5;" FontWeight="Regular" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="16" />
									<TextBlock Text="{x:Static lang:Resources.Export}" VerticalAlignment="Center" />
								</StackPanel>
							</Button>
						</StackPanel>
					</StackPanel>
				</Expander>


				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xF47F;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.History}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.HistorySettings}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<StackPanel Margin="10 0 10 10">
						<CheckBox Margin="0 2 0 2" x:Name="DisableHistoryChk" Style="{DynamicResource CheckBoxStyle1}" Content="{x:Static lang:Resources.DisableHistory}" BorderThickness="3" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalContentAlignment="Center" Unchecked="DisableHistoryChk_Checked" Checked="DisableHistoryChk_Checked" />
					</StackPanel>
				</Expander>

				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xF53D;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.Characters}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.CharactersDesc}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" MaxWidth="440" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<StackPanel Margin="10 0 10 10">
						<CheckBox Margin="0 2 0 2" x:Name="UseSimplerCharsChk" Style="{DynamicResource CheckBoxStyle1}" Content="{x:Static lang:Resources.UseSimpleCharacters}" BorderThickness="3" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalContentAlignment="Center" Unchecked="UseSimplerCharsChk_Unchecked" Checked="UseSimplerCharsChk_Unchecked" />
						<CheckBox Margin="0 2 0 2" x:Name="SaveCustomCharsChk" Style="{DynamicResource CheckBoxStyle1}" Content="{x:Static lang:Resources.SaveCustomChars}" BorderThickness="3" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalContentAlignment="Center" Unchecked="SaveCustomCharsChk_Checked" Checked="SaveCustomCharsChk_Checked" />


						<CheckBox Margin="0 10 0 2" x:Name="UseCustomCharsChk" Style="{DynamicResource CheckBoxStyle1}" Content="{x:Static lang:Resources.UseUserDefinedChars}" BorderThickness="3" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" VerticalContentAlignment="Center" Unchecked="UseCustomCharsChk_Checked" Checked="UseCustomCharsChk_Checked" />

						<TextBlock Text="{x:Static lang:Resources.LowerCase}" />
						<TextBox Padding="3" x:Name="LowerCaseCharsTxt" MinWidth="40" Style="{DynamicResource TextBoxStyle1}" FontSize="14" Foreground="{Binding Source={StaticResource Foreground1}}" CaretBrush="{Binding Source={StaticResource Foreground1}}" SelectionBrush="#FF007AF5" Margin="10,3,10,10" VerticalAlignment="Center" TextChanged="LowerCaseCharsTxt_TextChanged" Background="{Binding Source={StaticResource Background4}}" BorderBrush="{Binding Source={StaticResource Gray}}" FontFamily="Consolas" BorderThickness="0" Width="490" >
							<TextBox.Effect>
								<DropShadowEffect BlurRadius="15" Color="#000" Direction="135" Opacity="0.2" ShadowDepth="0" />
							</TextBox.Effect>
						</TextBox>

						<TextBlock Text="{x:Static lang:Resources.UpperCase}" />
						<TextBox Padding="3" x:Name="UpperCaseCharsTxt" MinWidth="40" Style="{DynamicResource TextBoxStyle1}" FontSize="14" Foreground="{Binding Source={StaticResource Foreground1}}" CaretBrush="{Binding Source={StaticResource Foreground1}}" SelectionBrush="#FF007AF5" Margin="10,3,10,10" VerticalAlignment="Center" TextChanged="UpperCaseCharsTxt_TextChanged" Background="{Binding Source={StaticResource Background4}}" BorderBrush="{Binding Source={StaticResource Gray}}" FontFamily="Consolas" BorderThickness="0" Width="490" >
							<TextBox.Effect>
								<DropShadowEffect BlurRadius="15" Color="#000" Direction="135" Opacity="0.2" ShadowDepth="0" />
							</TextBox.Effect>
						</TextBox>

						<TextBlock Text="{x:Static lang:Resources.Numbers}" />
						<TextBox Padding="3" x:Name="NumberCharsTxt" MinWidth="40" Style="{DynamicResource TextBoxStyle1}" FontSize="14" Foreground="{Binding Source={StaticResource Foreground1}}" CaretBrush="{Binding Source={StaticResource Foreground1}}" SelectionBrush="#FF007AF5" Margin="10,3,10,10" VerticalAlignment="Center" TextChanged="NumberCharsTxt_TextChanged" Background="{Binding Source={StaticResource Background4}}" BorderBrush="{Binding Source={StaticResource Gray}}" FontFamily="Consolas" BorderThickness="0" Width="490" >
							<TextBox.Effect>
								<DropShadowEffect BlurRadius="15" Color="#000" Direction="135" Opacity="0.2" ShadowDepth="0" />
							</TextBox.Effect>
						</TextBox>

						<TextBlock Text="{x:Static lang:Resources.SpecialCaracters}" />
						<TextBox Padding="3" x:Name="SpecialCharsTxt" MinWidth="40" Style="{DynamicResource TextBoxStyle1}" FontSize="14" Foreground="{Binding Source={StaticResource Foreground1}}" CaretBrush="{Binding Source={StaticResource Foreground1}}" SelectionBrush="#FF007AF5" Margin="10,3,10,10" VerticalAlignment="Center" TextChanged="SpecialCharsTxt_TextChanged" Background="{Binding Source={StaticResource Background4}}" BorderBrush="{Binding Source={StaticResource Gray}}" FontFamily="Consolas" BorderThickness="0" Width="490" >
							<TextBox.Effect>
								<DropShadowEffect BlurRadius="15" Color="#000" Direction="135" Opacity="0.2" ShadowDepth="0" />
							</TextBox.Effect>
						</TextBox>

					</StackPanel>
				</Expander>

				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xF73F;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.Encryption}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.EncryptionSettings}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<StackPanel Orientation="Horizontal" Margin="10">
						<TextBlock Text="{x:Static lang:Resources.DefaultEncryptionMode}" VerticalAlignment="Center" />
						<ComboBox x:Name="AlgorithmComboBox" Grid.Column="1" Style="{DynamicResource ComboBoxStyle1}" Margin="10,0,10,0" BorderThickness="2" VerticalAlignment="Center" Foreground="{Binding Source={StaticResource Foreground1}}" Padding="10 5" SelectionChanged="AlgorithmComboBox_SelectionChanged">
							<ComboBoxItem Content="{x:Static lang:Resources.AES}" />
							<ComboBoxItem Content="{x:Static lang:Resources._3DES}" />
						</ComboBox>
					</StackPanel>
				</Expander>

				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xF419;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.Data}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.ManageData}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<StackPanel Margin="10 0 10 10">
						<StackPanel Orientation="Horizontal" Margin="0,0,0,5">
							<Button x:Name="ImportBtn" Click="ImportBtn_Click" Background="{Binding Source={StaticResource AccentColor}}" Foreground="{Binding Source={StaticResource WindowButtonsHoverForeground1}}" Padding="10,5,10,5" Style="{StaticResource TabButtonStyle}" FontWeight="ExtraBold" Cursor="Hand" VerticalAlignment="Center" Margin="0,0,10,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="&#xF151;" FontWeight="Regular" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="16" />
									<TextBlock Text="{x:Static lang:Resources.ImportSettings}" VerticalAlignment="Center" />
								</StackPanel>
							</Button>
							<Button x:Name="ExportBtn" Click="ExportBtn_Click" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}" Padding="10,5,10,5" Style="{StaticResource TabButtonStyle}" FontWeight="ExtraBold" Cursor="Hand" VerticalAlignment="Center" MouseEnter="BtnEnter" MouseLeave="BtnLeave">
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="&#xF1A5;" FontWeight="Regular" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="16" />
									<TextBlock Text="{x:Static lang:Resources.ExportSettings}" VerticalAlignment="Center" />
								</StackPanel>
							</Button>
						</StackPanel>
						<Button x:Name="ResetSettingsLink" Padding="5" Margin="1" Background="{x:Null}" Style="{DynamicResource LinkButtonStyle}" Foreground="{Binding Source={StaticResource AccentColor}}" FontSize="14" FontWeight="ExtraBold" Cursor="Hand" Click="ResetSettingsLink_Click" HorizontalAlignment="Left">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="&#xF583;" FontFamily="..\Fonts\#FluentSystemIcons-Regular" FontWeight="Regular" Margin="0,0,10,0" VerticalAlignment="Center" />
								<TextBlock Text="{x:Static lang:Resources.ResetSettings}" VerticalAlignment="Center" />
							</StackPanel>
						</Button>
					</StackPanel>
				</Expander>


				<Expander Style="{DynamicResource ExpanderStyle1}" Margin="10,10,10,0" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}">
					<Expander.Header>
						<StackPanel Margin="10 15" Orientation="Horizontal">
							<TextBlock Text="&#xF906;" FontSize="22" FontFamily="..\Fonts\#FluentSystemIcons-Regular" VerticalAlignment="Center" />
							<StackPanel>
								<TextBlock Text="{x:Static lang:Resources.Licenses}" FontSize="18" VerticalAlignment="Center" FontWeight="ExtraBold" Margin="10,0,0,0" />
								<TextBlock Text="{x:Static lang:Resources.SeeLicenses}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0" TextWrapping="Wrap" />
							</StackPanel>
						</StackPanel>
					</Expander.Header>

					<Button x:Name="SeeLicensesBtn" Padding="5" Margin="10 0 10 10" Background="{x:Null}" Style="{DynamicResource LinkButtonStyle}" Foreground="{Binding Source={StaticResource AccentColor}}" FontSize="14" FontWeight="ExtraBold" Cursor="Hand" Click="SeeLicensesBtn_Click" HorizontalAlignment="Left">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="&#xF583;" FontFamily="..\Fonts\#FluentSystemIcons-Regular" FontWeight="Regular" Margin="0,0,10,0" VerticalAlignment="Center" />
							<TextBlock Text="{x:Static lang:Resources.SeeLicenses}" VerticalAlignment="Center" />
						</StackPanel>
					</Button>
				</Expander>
				<TextBlock Text="{x:Static lang:Resources.OpenSourceMention}" Margin="0,10,0,0" FontStyle="Italic" HorizontalAlignment="Center"/>
			</StackPanel>
		</Grid>
	</ScrollViewer>
</Page>