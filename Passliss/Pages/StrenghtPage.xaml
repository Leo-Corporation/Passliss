<Page x:Class="Passliss.Pages.StrenghtPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Passliss.Pages" xmlns:lang="clr-namespace:Passliss.Properties" mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" FontFamily="../Fonts/#Hauora" Foreground="{Binding Source={StaticResource Foreground1}}" Title="StrenghtPage">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<StackPanel Margin="10,40,10,0" Grid.Row="0">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<TextBlock Text="{x:Static lang:Resources.Strenght}" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="16" />

				<Button Visibility="Collapsed" Padding="5" x:Name="SeeMoreBtn" Click="SeeMoreBtn_Click" Grid.Column="1" Style="{DynamicResource TabButtonStyle}" Background="{Binding Source={StaticResource Background2}}" Foreground="{Binding Source={StaticResource Foreground1}}" FontSize="14" Margin="0,0,5,0">
					<StackPanel Orientation="Horizontal">
						<TextBlock x:Name="SeeMoreTxt" Text="{x:Static lang:Resources.More}" VerticalAlignment="Center" FontWeight="ExtraBold" FontSize="12" />
						<TextBlock x:Name="SeeMoreIconTxt" Text="&#xF182;" FontWeight="Regular" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="16" />
					</StackPanel>

					<Button.ToolTip>
						<ToolTip Content="{x:Static lang:Resources.More}" Foreground="{Binding Source={StaticResource Foreground1}}" Background="{Binding Source={StaticResource Background1}}" />
					</Button.ToolTip>
				</Button>
			</Grid>
		</StackPanel>

		<Grid Grid.Row="1" x:Name="StrengthContent">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Grid HorizontalAlignment="Center" Width="496.8">
					<TextBox TextChanged="PasswordTxt_TextChanged" x:Name="PasswordTxt" Style="{DynamicResource TextBoxStyle1}" FontSize="15" FontWeight="ExtraBold" Background="{Binding Source={StaticResource Background4}}" Foreground="{Binding Source={StaticResource Foreground1}}" CaretBrush="{Binding Source={StaticResource Foreground1}}" Padding="3" SelectionBrush="#FF007AF5" Margin="10,15,10,0" Height="25" VerticalContentAlignment="Center" >
						<TextBox.Effect>
							<DropShadowEffect BlurRadius="15" Color="#000" Direction="135" Opacity="0.2" ShadowDepth="0" />
						</TextBox.Effect>
					</TextBox>
					<PasswordBox Visibility="Hidden" Style="{DynamicResource PasswordBoxStyle1}" x:Name="PasswordPwrBox" Margin="10,15,10,0" FontSize="15" FontWeight="ExtraBold" Background="{Binding Source={StaticResource Background4}}" Foreground="{Binding Source={StaticResource Foreground1}}" CaretBrush="{Binding Source={StaticResource Foreground1}}" Padding="3" SelectionBrush="#FF007AF5" PasswordChanged="PasswordPwrBox_PasswordChanged" VerticalContentAlignment="Center" >
						<PasswordBox.Effect>
							<DropShadowEffect BlurRadius="15" Color="#000" Direction="135" Opacity="0.2" ShadowDepth="0" />
						</PasswordBox.Effect>
					</PasswordBox>
				</Grid>
			</StackPanel>

			<StackPanel Grid.Row="1">
				<TextBlock x:Name="IconTxt" Margin="10" Text="&#xF4AB;" Foreground="{Binding Source={StaticResource Gray}}" FontFamily="..\Fonts\#FluentSystemIcons-Filled" FontSize="72" HorizontalAlignment="Center" />
				<TextBlock x:Name="CommentTxt" Text="{x:Static lang:Resources.EnterPassword}" Foreground="{Binding Source={StaticResource Foreground1}}" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="16" Margin="0,0,0,15" />
			</StackPanel>
		</Grid>

		<Grid x:Name="SeeMoreContent" Margin="5" Grid.Row="1" Visibility="Collapsed">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<TextBlock x:Name="SeeMorePasswordTxt" FontWeight="ExtraBold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding Source={StaticResource Foreground1}}" />

			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<TextBlock Text="{x:Static lang:Resources.UpperCase}" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Red}}" Grid.Column="0" />
				<TextBlock Text="{x:Static lang:Resources.LowerCase}" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Blue}}" Grid.Column="0" Grid.Row="1" />
				<TextBlock Text="{x:Static lang:Resources.Numbers}" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Green}}" Grid.Column="0" Grid.Row="2" />
				<TextBlock Text="{x:Static lang:Resources.SpecialCaracters}" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Purple}}" Grid.Column="0" Grid.Row="3" />
				<TextBlock Text="{x:Static lang:Resources.Lenght}" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Foreground1}}" Grid.Column="0" Grid.Row="4" />

				<TextBlock x:Name="UpperCaseTxt" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Red}}" Grid.Column="1" />
				<TextBlock x:Name="LowerCaseTxt" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Blue}}" Grid.Row="1" Grid.Column="1" />
				<TextBlock x:Name="NumbersTxt" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Green}}" Grid.Row="2" Grid.Column="1" />
				<TextBlock x:Name="SpecialCharsTxt" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Purple}}" Grid.Row="3" Grid.Column="1" />
				<TextBlock x:Name="LengthTxt" Margin="3" FontWeight="ExtraBold" Foreground="{Binding Source={StaticResource Foreground1}}" Grid.Row="4" Grid.Column="1" />
			</Grid>
		</Grid>

		<Border x:Name="border" Background="{Binding Source={StaticResource LightAccentColor}}" CornerRadius="5" Padding="10" Margin="10" Grid.Row="2">
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Foreground="{Binding Source={StaticResource AccentColor}}" Text="&#xEA38;" FontSize="14" FontFamily="..\Fonts\#FluentlyIcons" Margin="0,0,10,0" VerticalAlignment="Center" />
				<TextBlock Foreground="{Binding Source={StaticResource AccentColor}}" Text="{x:Static lang:Resources.StrenghtWarning}" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" MaxWidth="766" Width="500" />
			</StackPanel>
		</Border>
	</Grid>
</Page>